{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    // "allowJs": true,
    // "lib": [
    //   //   "deno.window"
    //   "deno.ns",
    //   "dom",
    // //   "DOM.Iterable"
    //   //   "dom.asynciterable"
    // ],
    "lib": [
      "dom",
      //   "dom.iterable",
      //  "dom.asynciterable",
      "es2018.asynciterable",
      "deno.ns"
    ],
    "strict": true
